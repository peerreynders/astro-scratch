---
// file: src/components/page-header.astro

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<div class="c-page-header">
	<div class="c-page-header__wrapper">
		<!-- prettier-ignore -->
		<h1 
		  class="u-headline u-headline--primary"
		>{title}</h1>
		{
			Astro.slots.has('default') && (
				<div class="u-measure-long">
					<slot />
				</div>
			)
		}
	</div>
</div>
